<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Set initial states
    gsap.set(".gsap-exp-title", { y: 30 });
    gsap.set(".gsap-exp-desc", { y: 20 });

    const expTl = gsap.timeline({
      scrollTrigger: {
        trigger: "#experience",
        start: "top 75%",
      },
      defaults: { ease: "power3.out" }
    });

    expTl
      .to(".gsap-exp-line", {
        scaleX: 1,
        duration: 0.8,
        ease: "power2.inOut",
      })
      .to(".gsap-exp-title", {
        opacity: 1,
        y: 0,
        duration: 1,
      }, "-=0.3")
      .to(".gsap-exp-desc", {
        opacity: 1,
        y: 0,
        duration: 0.8,
      }, "-=0.5")
      .to(".gsap-experience-item", {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.15,
      }, "-=0.3");
  });
</script>
