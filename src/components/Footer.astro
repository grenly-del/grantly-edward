---
import { ArrowUp } from "lucide-astro";
---

<!-- Decorative separator -->
<div
  class="w-full h-px bg-gradient-to-r from-transparent via-amber-500/30 to-transparent"
>
</div>

<footer class="py-16 bg-white dark:bg-slate-950 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 flex flex-col items-center">
    <!-- Back to Top -->
    <button
      id="back-to-top"
      class="group mb-12 flex flex-col items-center gap-2 text-slate-400 dark:text-slate-500 hover:text-amber-600 dark:hover:text-amber-400 transition-colors cursor-pointer"
      aria-label="Scroll to top"
    >
      <div
        class="w-10 h-10 rounded-full border border-slate-200 dark:border-slate-800 group-hover:border-amber-500 dark:group-hover:border-amber-500 flex items-center justify-center transition-all group-hover:-translate-y-1 duration-300"
      >
        <ArrowUp class="w-4 h-4" />
      </div>
      <span class="text-xs font-medium tracking-[0.3em] uppercase"
        >Kembali ke Atas</span
      >
    </button>

    <div class="mb-8">
      <a
        href="#"
        class="text-3xl font-bold font-serif tracking-tighter text-slate-900 dark:text-white group"
      >
        GS<span
          class="text-amber-500 inline-block group-hover:rotate-12 transition-transform duration-300"
          >.</span
        >
      </a>
    </div>

    <div class="flex gap-8 mb-8">
      <a
        href="#"
        class="text-slate-600 dark:text-slate-400 hover:text-amber-600 dark:hover:text-amber-400 transition-all font-sans font-medium text-sm hover:scale-110 inline-block"
        >LinkedIn</a
      >
      <a
        href="#"
        class="text-slate-600 dark:text-slate-400 hover:text-amber-600 dark:hover:text-amber-400 transition-all font-sans font-medium text-sm hover:scale-110 inline-block"
        >GitHub</a
      >
      <a
        href="#"
        class="text-slate-600 dark:text-slate-400 hover:text-amber-600 dark:hover:text-amber-400 transition-all font-sans font-medium text-sm hover:scale-110 inline-block"
        >Instagram</a
      >
    </div>

    <div class="text-slate-500 dark:text-slate-500 text-sm font-sans">
      Â© {new Date().getFullYear()} Grantly Sorongan. All rights reserved.
    </div>
  </div>
</footer>

<script>
  // Back to top
  const backToTop = document.getElementById("back-to-top");
  if (backToTop) {
    backToTop.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }
</script>
