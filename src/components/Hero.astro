---
import { ArrowRight, Download } from 'lucide-astro';
---

<section id="about" class="min-h-screen flex items-center justify-center pt-16 relative overflow-hidden bg-white dark:bg-slate-950 transition-colors duration-300">
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
    <div class="absolute top-[20%] right-[10%] w-72 h-72 bg-purple-500/20 dark:bg-purple-500/20 rounded-full blur-[80px]"></div>
    <div class="absolute bottom-[10%] left-[10%] w-96 h-96 bg-cyan-500/10 dark:bg-cyan-500/10 rounded-full blur-[80px]"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      
      <!-- Text Content -->
      <div class="text-left space-y-8">
        <div class="space-y-4">
          
          <h1 class="text-5xl sm:text-7xl font-bold font-outfit tracking-tight text-slate-900 dark:text-white leading-[1.1]">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-blue-600 to-purple-600 dark:from-cyan-400 dark:via-blue-500 dark:to-purple-600 animate-gradient-x">
              Mendesain Masa Depan
            </span>
            <br />
            Melalui Sistem Digital
          </h1>
          <div class="text-xl sm:text-2xl font-bold text-slate-700 dark:text-slate-200 h-8">
            <span id="typewriter" class="border-r-2 border-cyan-500 pr-1"></span>
          </div>
          <p class="text-lg text-slate-600 dark:text-slate-400 max-w-lg leading-relaxed">
            Saya membangun aplikasi, platform, dan solusi teknologi yang membantu bisnis dan pendidikan bekerja lebih cepat, lebih terstruktur, dan lebih cerdas.
          </p>
        </div>

        <div class="flex flex-wrap gap-4">
          <a href="#contact" class="px-8 py-4 bg-slate-900 dark:bg-white text-white dark:text-slate-950 rounded-full font-semibold hover:bg-slate-800 dark:hover:bg-cyan-50 transition-all flex items-center gap-2 group shadow-lg shadow-slate-900/20 dark:shadow-none">
            Hubungi Saya
            <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
          </a>
          <a href="#" class="px-8 py-4 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-white rounded-full font-semibold hover:border-slate-400 dark:hover:border-slate-500 transition-all flex items-center gap-2">
            Unduh CV
            <Download class="w-4 h-4" />
          </a>
        </div>
        
        <div class="flex items-center gap-6 pt-4 text-slate-600 dark:text-slate-500 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
            <span>Berbasis di Indonesia</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full bg-slate-400 dark:bg-slate-500"></div>
            <span>Bisa Freelance</span>
          </div>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="relative lg:block flex justify-center">
        <div class="relative w-80 h-80 sm:w-96 sm:h-96">
          <div class="absolute inset-0 bg-gradient-to-tr from-cyan-500 to-purple-600 rounded-[2rem] rotate-6 opacity-30 dark:opacity-40 blur-lg"></div>
          <div class="absolute inset-0 bg-white dark:bg-slate-800 rounded-[2rem] rotate-6 border border-slate-200 dark:border-white/10"></div>
          <div class="relative w-full h-full bg-slate-100 dark:bg-slate-900 rounded-[2rem] border border-slate-200 dark:border-slate-700 overflow-hidden group">
            <img 
              src="/grantly.webp"  
              alt="Grantly Sorongan" 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-90 dark:opacity-80 group-hover:opacity-100"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-white/10 via-transparent to-transparent dark:from-slate-950 dark:via-transparent dark:to-transparent opacity-0 dark:opacity-80"></div>
          </div>
          
          <!-- Floating Badge -->
          <div class="absolute -bottom-6 -right-6 bg-white/80 dark:bg-slate-800/80 p-4 rounded-xl border border-slate-200 dark:border-slate-700 shadow-xl backdrop-blur-md">
            <div class="flex items-center gap-3">
              <div class="bg-cyan-100 dark:bg-cyan-500/20 p-2 rounded-lg">
                <span class="text-2xl">ðŸš€</span>
              </div>
              <div>
                <p class="text-xs text-slate-500 dark:text-slate-400">Pengalaman</p>
                <p class="text-lg font-bold text-slate-900 dark:text-white">7+ Tahun</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  const words = ["Web Developer", "System Builder", "Project Manager", "Founder"];
  let i = 0;
  let j = 0;
  let currentWord = "";
  let isDeleting = false;
  
  function type() {
    currentWord = words[i];
    const element = document.getElementById("typewriter");
    
    if (!element) return;

    if (isDeleting) {
      element.textContent = currentWord.substring(0, j - 1);
      j--;
      if (j == 0) {
        isDeleting = false;
        i++;
        if (i == words.length) {
          i = 0;
        }
      }
    } else {
      element.textContent = currentWord.substring(0, j + 1);
      j++;
      if (j == currentWord.length) {
        isDeleting = true;
      }
    }
    setTimeout(type, isDeleting ? 100 : 200);
  }

  // Initialize typing delay specifically for deletion pause
  type();
</script>
