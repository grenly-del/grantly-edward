---
import { ExternalLink, Github, ArrowUpRight } from 'lucide-astro';
import GridBackground from './GridBackground.astro';
import { projects } from '../data/projects';
---


<section id="projects" class="py-32 bg-transparent relative">
  <GridBackground variant="projects" />
  <div class="max-w-7xl mx-auto px-4 sm:px-6 relative z-10">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
      <div class="max-w-2xl">
        <div class="gsap-proj-line w-16 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600 mb-8 origin-left scale-x-0"></div>
        <h2 class="gsap-proj-title text-4xl md:text-5xl font-bold font-serif text-slate-900 dark:text-white mb-4 opacity-0">Proyek Unggulan</h2>
        <p class="gsap-proj-desc text-slate-600 dark:text-slate-400 font-sans opacity-0">Pilih karya terbaik yang mencerminkan dedikasi saya terhadap detail dan performa.</p>
      </div>
      <a href="#" class="gsap-proj-desc opacity-0 text-amber-600 dark:text-amber-400 hover:text-amber-500 dark:hover:text-amber-300 font-medium flex items-center gap-2 group transition-colors">
        Lihat semua proyek 
        <ExternalLink class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, i) => (
        <a href={`/projects/${project.slug}`} class="gsap-project-card opacity-0 translate-y-8 group rounded-sm bg-white dark:bg-slate-950 border border-slate-200 dark:border-slate-800 overflow-hidden hover:border-amber-500/50 transition-all duration-500 block">
          
          <!-- Image Wrapper -->
          <div class="relative h-56 overflow-hidden border-b border-slate-100 dark:border-slate-900">
            <div class="absolute inset-0 bg-slate-900/0 dark:bg-slate-900/10 group-hover:bg-slate-900/40 transition-colors z-10 flex items-center justify-center">
              <span class="opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center gap-2 text-sm font-medium text-white tracking-wide translate-y-3 group-hover:translate-y-0">
                Lihat Detail
                <ArrowUpRight class="w-4 h-4" />
              </span>
            </div>
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 grayscale group-hover:grayscale-0"
            />
          </div>

          <!-- Content -->
          <div class="p-8">
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-3 font-serif group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">{project.title}</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed mb-6 line-clamp-3 font-sans">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-8">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 text-xs font-medium tracking-wide border border-slate-200 dark:border-slate-800 text-slate-500 dark:text-slate-400 uppercase">
                  {tag}
                </span>
              ))}
            </div>

            <div class="flex items-center gap-6 pt-6 border-t border-slate-100 dark:border-slate-900">
              <span class="text-sm font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 flex items-center gap-2 transition-colors">
                <ExternalLink class="w-4 h-4" /> Live Demo
              </span>
              <span class="text-sm font-medium text-slate-500 dark:text-slate-400 group-hover:text-slate-900 dark:group-hover:text-white flex items-center gap-2 transition-colors">
                <Github class="w-4 h-4" /> Source Code
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Set initial states
    gsap.set(".gsap-proj-title", { y: 30 });
    gsap.set(".gsap-proj-desc", { y: 20 });

    const projTl = gsap.timeline({
      scrollTrigger: {
        trigger: "#projects",
        start: "top 75%",
      },
      defaults: { ease: "power3.out" }
    });

    projTl
      .to(".gsap-proj-line", {
        scaleX: 1,
        duration: 0.8,
        ease: "power2.inOut",
      })
      .to(".gsap-proj-title", {
        opacity: 1,
        y: 0,
        duration: 1,
      }, "-=0.3")
      .to(".gsap-proj-desc", {
        opacity: 1,
        y: 0,
        duration: 0.8,
      }, "-=0.5")
      .to(".gsap-project-card", {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.12,
        ease: "power3.out",
      }, "-=0.3");
  });
</script>
