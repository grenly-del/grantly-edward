---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import GridBackground from "../../components/GridBackground.astro";
import {
    ArrowLeft,
    ArrowRight,
    Calendar,
    Award,
    CheckCircle,
    ExternalLink,
} from "lucide-astro";
import { certifications } from "../../data/certifications";

export function getStaticPaths() {
    return certifications.map((cert, index) => ({
        params: { slug: cert.slug },
        props: {
            cert,
            prevCert: index > 0 ? certifications[index - 1] : null,
            nextCert:
                index < certifications.length - 1
                    ? certifications[index + 1]
                    : null,
        },
    }));
}

// In SSR mode, look up the certification from the URL slug
const { slug } = Astro.params;
const certIndex = certifications.findIndex((c) => c.slug === slug);

if (certIndex === -1) {
    return Astro.redirect("/404");
}

const cert = certifications[certIndex];
const prevCert = certIndex > 0 ? certifications[certIndex - 1] : null;
const nextCert =
    certIndex < certifications.length - 1
        ? certifications[certIndex + 1]
        : null;
---

<Layout
    title={`${cert.name} | Grantly Sorongan`}
    description={cert.description}
    image={cert.image}
>
    <Navbar />

    <main class="pt-20">
        <!-- Hero Section -->
        <section class="relative min-h-[70vh] flex items-end overflow-hidden">
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src={cert.image}
                    alt={cert.name}
                    class="gsap-detail-hero-img w-full h-full object-cover scale-110"
                />
                <!-- Gradient overlays -->
                <div
                    class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/70 to-slate-950/30"
                >
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-slate-950/50 to-transparent"
                >
                </div>
            </div>

            <!-- Content -->
            <div
                class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 w-full pb-16 pt-32"
            >
                <!-- Back Button -->
                <a
                    href="/#certifications"
                    class="gsap-detail-back inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-amber-400 transition-colors mb-10 opacity-0 group"
                >
                    <ArrowLeft
                        class="w-4 h-4 group-hover:-translate-x-1 transition-transform"
                    />
                    Kembali ke Sertifikasi
                </a>

                <!-- Badge -->
                <div
                    class="gsap-detail-badge flex items-center gap-3 mb-6 opacity-0"
                >
                    <div
                        class="w-16 h-16 rounded-full bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center"
                    >
                        <Award class="w-8 h-8 text-white" />
                    </div>
                    <div>
                        <p
                            class="text-xs font-medium tracking-widest uppercase text-amber-400"
                        >
                            Sertifikasi
                        </p>
                        <p class="text-sm text-slate-400">{cert.issuer}</p>
                    </div>
                </div>

                <!-- Title -->
                <h1
                    class="gsap-detail-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold font-serif text-white mb-6 opacity-0 leading-tight"
                >
                    {cert.name}
                </h1>

                <!-- Meta Info Row -->
                <div
                    class="gsap-detail-meta flex flex-wrap items-center gap-6 text-slate-400 text-sm opacity-0"
                >
                    <div class="flex items-center gap-2">
                        <Calendar class="w-4 h-4 text-amber-500" />
                        <span>{cert.date}</span>
                    </div>
                    {
                        cert.validUntil && (
                            <>
                                <div class="w-px h-4 bg-slate-700" />
                                <div class="flex items-center gap-2">
                                    <CheckCircle class="w-4 h-4 text-amber-500" />
                                    <span>Valid hingga {cert.validUntil}</span>
                                </div>
                            </>
                        )
                    }
                    <div class="w-px h-4 bg-slate-700"></div>
                    <div class="flex items-center gap-2">
                        <span class="text-slate-500">ID:</span>
                        <span class="font-mono text-amber-400"
                            >{cert.credential}</span
                        >
                    </div>
                </div>
            </div>

            <!-- Decorative bottom line -->
            <div
                class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-amber-500/50 to-transparent z-10"
            >
            </div>
        </section>

        <!-- Content Section -->
        <section class="relative py-20 md:py-28 bg-white dark:bg-slate-950">
            <GridBackground />

            <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20">
                    <!-- Main Content (Left) -->
                    <div class="lg:col-span-7">
                        <!-- Description -->
                        <div class="gsap-detail-section mb-16 opacity-0">
                            <div class="flex items-center gap-4 mb-6">
                                <div
                                    class="w-10 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                                >
                                </div>
                                <h2
                                    class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                                >
                                    Tentang Sertifikasi
                                </h2>
                            </div>
                            <p
                                class="text-lg leading-relaxed text-slate-700 dark:text-slate-300 font-sans"
                            >
                                {cert.description}
                            </p>
                        </div>

                        <!-- Skills Covered -->
                        <div class="gsap-detail-section mb-16 opacity-0">
                            <div class="flex items-center gap-4 mb-8">
                                <div
                                    class="w-10 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                                >
                                </div>
                                <h2
                                    class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                                >
                                    Keahlian yang Dikuasai
                                </h2>
                            </div>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                {
                                    cert.skills.map(
                                        (skill: string, i: number) => (
                                            <div class="flex items-start gap-3 group">
                                                <CheckCircle class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" />
                                                <p class="text-slate-600 dark:text-slate-400 font-sans leading-relaxed">
                                                    {skill}
                                                </p>
                                            </div>
                                        ),
                                    )
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar (Right) -->
                    <div class="lg:col-span-5">
                        <div class="lg:sticky lg:top-28 space-y-8">
                            <!-- Certificate Details Card -->
                            <div
                                class="gsap-detail-section opacity-0 border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-950 p-8"
                            >
                                <div class="flex items-center gap-4 mb-8">
                                    <div
                                        class="w-8 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                                    >
                                    </div>
                                    <h3
                                        class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                                    >
                                        Detail Sertifikat
                                    </h3>
                                </div>
                                <div class="space-y-6">
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 dark:text-slate-500 mb-1"
                                        >
                                            Penerbit
                                        </p>
                                        <p
                                            class="font-medium text-slate-900 dark:text-white"
                                        >
                                            {cert.issuer}
                                        </p>
                                    </div>
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 dark:text-slate-500 mb-1"
                                        >
                                            Tanggal Diterbitkan
                                        </p>
                                        <p
                                            class="font-medium text-slate-900 dark:text-white"
                                        >
                                            {cert.date}
                                        </p>
                                    </div>
                                    {
                                        cert.validUntil && (
                                            <div>
                                                <p class="text-xs text-slate-500 dark:text-slate-500 mb-1">
                                                    Berlaku Hingga
                                                </p>
                                                <p class="font-medium text-slate-900 dark:text-white">
                                                    {cert.validUntil}
                                                </p>
                                            </div>
                                        )
                                    }
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 dark:text-slate-500 mb-1"
                                        >
                                            Credential ID
                                        </p>
                                        <p
                                            class="font-mono text-sm text-amber-600 dark:text-amber-400"
                                        >
                                            {cert.credential}
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Verification Card -->
                            {
                                (cert.certificateImage ||
                                    cert.verificationUrl) && (
                                    <div class="gsap-detail-section opacity-0 border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-950 p-8">
                                        <div class="flex items-center gap-4 mb-8">
                                            <div class="w-8 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600" />
                                            <h3 class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400">
                                                Verifikasi
                                            </h3>
                                        </div>
                                        <div class="space-y-3">
                                            {/* Lihat Sertifikat - opens popup */}
                                            {cert.certificateImage && (
                                                <button
                                                    id="open-cert-modal"
                                                    data-cert-image={
                                                        cert.certificateImage
                                                    }
                                                    data-cert-name={cert.name}
                                                    class="flex items-center justify-center gap-3 w-full py-3.5 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-400 hover:to-amber-500 text-white font-medium text-sm tracking-wide transition-all duration-300 group cursor-pointer"
                                                >
                                                    <svg
                                                        class="w-4 h-4 group-hover:scale-110 transition-transform"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                        />
                                                    </svg>
                                                    Lihat Sertifikat
                                                </button>
                                            )}
                                            {/* Verifikasi Online - external link */}
                                            {cert.verificationUrl && (
                                                <a
                                                    href={cert.verificationUrl}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="flex items-center justify-center gap-3 w-full py-3.5 border border-amber-500/50 hover:border-amber-500 text-amber-600 dark:text-amber-400 hover:bg-amber-500/10 font-medium text-sm tracking-wide transition-all duration-300 group"
                                                >
                                                    <ExternalLink class="w-4 h-4 group-hover:rotate-12 transition-transform" />
                                                    Verifikasi Online
                                                </a>
                                            )}
                                        </div>
                                    </div>
                                )
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Navigation Section -->
        <section
            class="relative border-t border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-950"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-slate-200 dark:divide-slate-800"
                >
                    <!-- Previous Certification -->
                    <div class="py-12 md:pr-12">
                        {
                            prevCert ? (
                                <a
                                    href={`/certifications/${prevCert.slug}`}
                                    class="group block"
                                >
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center gap-2 mb-3">
                                        <ArrowLeft class="w-3 h-3 group-hover:-translate-x-1 transition-transform" />
                                        Sertifikasi Sebelumnya
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        {prevCert.name}
                                    </h3>
                                </a>
                            ) : (
                                <a href="/#certifications" class="group block">
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center gap-2 mb-3">
                                        <ArrowLeft class="w-3 h-3 group-hover:-translate-x-1 transition-transform" />
                                        Kembali
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        Semua Sertifikasi
                                    </h3>
                                </a>
                            )
                        }
                    </div>

                    <!-- Next Certification -->
                    <div class="py-12 md:pl-12 text-right">
                        {
                            nextCert ? (
                                <a
                                    href={`/certifications/${nextCert.slug}`}
                                    class="group block"
                                >
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center justify-end gap-2 mb-3">
                                        Sertifikasi Selanjutnya
                                        <ArrowRight class="w-3 h-3 group-hover:translate-x-1 transition-transform" />
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        {nextCert.name}
                                    </h3>
                                </a>
                            ) : (
                                <a href="/#certifications" class="group block">
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center justify-end gap-2 mb-3">
                                        Kembali
                                        <ArrowRight class="w-3 h-3 group-hover:translate-x-1 transition-transform" />
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        Semua Sertifikasi
                                    </h3>
                                </a>
                            )
                        }
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Certificate Image Popup Modal -->
    <div
        id="cert-modal"
        class="fixed inset-0 z-[9999] hidden items-center justify-center p-4"
    >
        <!-- Backdrop -->
        <div
            id="cert-modal-backdrop"
            class="absolute inset-0 bg-slate-950/90 backdrop-blur-sm"
        >
        </div>

        <!-- Modal Content -->
        <div
            id="cert-modal-content"
            class="relative z-10 max-w-4xl w-full max-h-[90vh] flex flex-col"
        >
            <!-- Close Button -->
            <button
                id="close-cert-modal"
                class="absolute -top-12 right-0 text-white/70 hover:text-white transition-colors group cursor-pointer"
            >
                <div class="flex items-center gap-2 text-sm">
                    <span
                        class="opacity-0 group-hover:opacity-100 transition-opacity"
                        >Tutup</span
                    >
                    <svg
                        class="w-8 h-8"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </div>
            </button>

            <!-- Certificate Name -->
            <h3
                id="cert-modal-title"
                class="text-white font-serif font-bold text-xl mb-4 text-center"
            >
            </h3>

            <!-- Certificate Image -->
            <div
                class="overflow-auto rounded-lg border border-slate-700 bg-slate-900 shadow-2xl"
            >
                <img
                    id="cert-modal-image"
                    src=""
                    alt=""
                    class="w-full h-auto object-contain"
                />
            </div>
        </div>
    </div>

    <Footer />
</Layout>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Hero entrance animation
        const heroTl = gsap.timeline({ defaults: { ease: "power3.out" } });

        // Hero image scale-in
        heroTl
            .to(".gsap-detail-hero-img", {
                scale: 1,
                duration: 1.8,
                ease: "power2.out",
            })
            .to(
                ".gsap-detail-back",
                {
                    opacity: 1,
                    x: 0,
                    duration: 0.6,
                },
                "-=1.2",
            )
            .to(
                ".gsap-detail-badge",
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                },
                "-=0.9",
            )
            .to(
                ".gsap-detail-title",
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                },
                "-=0.6",
            )
            .to(
                ".gsap-detail-meta",
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                },
                "-=0.5",
            );

        // Set initial states for hero
        gsap.set(".gsap-detail-back", { x: -20 });
        gsap.set(".gsap-detail-badge", { y: 15 });
        gsap.set(".gsap-detail-title", { y: 30 });
        gsap.set(".gsap-detail-meta", { y: 15 });

        // Content sections staggered reveal on scroll
        const sections = document.querySelectorAll(".gsap-detail-section");
        sections.forEach((section, i) => {
            gsap.set(section, { y: 30 });
            gsap.to(section, {
                scrollTrigger: {
                    trigger: section,
                    start: "top 85%",
                },
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: i * 0.1,
                ease: "power3.out",
            });
        });

        // ===== Certificate Image Popup Modal =====
        const modal = document.getElementById("cert-modal");
        const modalBackdrop = document.getElementById("cert-modal-backdrop");
        const modalContent = document.getElementById("cert-modal-content");
        const modalImage = document.getElementById(
            "cert-modal-image",
        ) as HTMLImageElement;
        const modalTitle = document.getElementById("cert-modal-title");
        const openBtn = document.getElementById("open-cert-modal");
        const closeBtn = document.getElementById("close-cert-modal");

        function openModal() {
            if (!modal || !openBtn) return;

            const certImage = openBtn.getAttribute("data-cert-image") || "";
            const certName = openBtn.getAttribute("data-cert-name") || "";

            if (modalImage) {
                modalImage.src = certImage;
                modalImage.alt = certName;
            }
            if (modalTitle) modalTitle.textContent = certName;

            modal.classList.remove("hidden");
            modal.classList.add("flex");
            document.body.style.overflow = "hidden";

            // Animate in
            gsap.fromTo(
                modalBackdrop,
                { opacity: 0 },
                { opacity: 1, duration: 0.3 },
            );
            gsap.fromTo(
                modalContent,
                { opacity: 0, scale: 0.9, y: 20 },
                {
                    opacity: 1,
                    scale: 1,
                    y: 0,
                    duration: 0.4,
                    ease: "back.out(1.2)",
                },
            );
        }

        function closeModal() {
            if (!modal) return;

            gsap.to(modalContent, {
                opacity: 0,
                scale: 0.9,
                y: 20,
                duration: 0.25,
            });
            gsap.to(modalBackdrop, {
                opacity: 0,
                duration: 0.3,
                onComplete: () => {
                    modal.classList.add("hidden");
                    modal.classList.remove("flex");
                    document.body.style.overflow = "";
                },
            });
        }

        if (openBtn) openBtn.addEventListener("click", openModal);
        if (closeBtn) closeBtn.addEventListener("click", closeModal);
        if (modalBackdrop) modalBackdrop.addEventListener("click", closeModal);

        // ESC key to close
        document.addEventListener("keydown", (e) => {
            if (
                e.key === "Escape" &&
                modal &&
                !modal.classList.contains("hidden")
            ) {
                closeModal();
            }
        });
    });
</script>

<style>
    /* Subtle grain texture on hero */
    section:first-of-type::after {
        content: "";
        position: absolute;
        inset: 0;
        z-index: 1;
        opacity: 0.03;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        pointer-events: none;
    }
</style>
