---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import GridBackground from "../../components/GridBackground.astro";
import { ArrowLeft, ArrowRight, Calendar, MapPin, Tag } from "lucide-astro";
import { galleryItems } from "../../data/gallery";

export function getStaticPaths() {
    return galleryItems.map((item, index) => ({
        params: { slug: item.slug },
        props: {
            item,
            prevItem: index > 0 ? galleryItems[index - 1] : null,
            nextItem:
                index < galleryItems.length - 1
                    ? galleryItems[index + 1]
                    : null,
        },
    }));
}

const { item, prevItem, nextItem } = Astro.props;
---

<Layout
    title={`${item.title} | Grantly Sorongan`}
    description={item.description}
    image={item.image}
>
    <Navbar />

    <main class="pt-20">
        <!-- Hero Section with Full Image -->
        <section
            class="relative min-h-[80vh] flex items-center overflow-hidden"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src={item.image}
                    alt={item.title}
                    class="gsap-detail-hero-img w-full h-full object-cover scale-110"
                />
                <!-- Gradient overlays -->
                <div
                    class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/60 to-slate-950/20"
                >
                </div>
            </div>

            <!-- Content -->
            <div
                class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 w-full py-20"
            >
                <!-- Back Button -->
                <a
                    href="/#gallery"
                    class="gsap-detail-back inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-amber-400 transition-colors mb-8 opacity-0 group"
                >
                    <ArrowLeft
                        class="w-4 h-4 group-hover:-translate-x-1 transition-transform"
                    />
                    Kembali ke Gallery
                </a>

                <!-- Category Badge -->
                <div class="gsap-detail-badge mb-6 opacity-0">
                    <span
                        class="inline-block px-4 py-2 text-xs font-medium tracking-widest uppercase bg-amber-500 text-white rounded-full"
                    >
                        {item.category}
                    </span>
                </div>

                <!-- Title -->
                <h1
                    class="gsap-detail-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold font-serif text-white mb-6 opacity-0 leading-tight max-w-4xl"
                >
                    {item.title}
                </h1>

                <!-- Meta Info -->
                <div
                    class="gsap-detail-meta flex flex-wrap items-center gap-6 text-slate-300 text-sm opacity-0"
                >
                    <div class="flex items-center gap-2">
                        <Calendar class="w-4 h-4 text-amber-400" />
                        <span>{item.date}</span>
                    </div>
                    {
                        item.location && (
                            <>
                                <div class="w-px h-4 bg-slate-600" />
                                <div class="flex items-center gap-2">
                                    <MapPin class="w-4 h-4 text-amber-400" />
                                    <span>{item.location}</span>
                                </div>
                            </>
                        )
                    }
                </div>
            </div>
        </section>

        <!-- Content Section -->
        <section class="relative py-20 md:py-28 bg-white dark:bg-slate-950">
            <GridBackground />

            <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6">
                <!-- 2 Column Layout: Content Left, Image Right -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
                    <!-- Left Column: Description & Story -->
                    <div class="space-y-12">
                        <!-- Description -->
                        <div class="gsap-detail-section opacity-0">
                            <div class="flex items-center gap-4 mb-6">
                                <div
                                    class="w-12 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                                >
                                </div>
                                <h2
                                    class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                                >
                                    Deskripsi
                                </h2>
                            </div>
                            <p
                                class="text-xl leading-relaxed text-slate-700 dark:text-slate-300 font-sans whitespace-pre-line"
                            >
                                {item.description}
                            </p>
                        </div>

                        <!-- Context/Story -->
                        <div class="gsap-detail-section opacity-0">
                            <div class="flex items-center gap-4 mb-6">
                                <div
                                    class="w-12 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                                >
                                </div>
                                <h2
                                    class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                                >
                                    Cerita di Balik Momen Ini
                                </h2>
                            </div>
                            <p
                                class="text-lg leading-relaxed text-slate-600 dark:text-slate-400 font-sans whitespace-pre-line"
                            >
                                {item.context}
                            </p>
                        </div>
                    </div>

                    <!-- Right Column: Moment Image -->
                    {
                        item.momentImage && (
                            <div class="gsap-detail-section opacity-0 lg:sticky lg:top-24 self-start">
                                <div class="flex items-center gap-4 mb-6">
                                    <div class="w-12 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600" />
                                    <h2 class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400">
                                        Foto Momen
                                    </h2>
                                </div>
                                <div class="relative overflow-hidden rounded-lg border border-slate-200 dark:border-slate-800 shadow-xl">
                                    <img
                                        src={item.momentImage}
                                        alt={`Foto momen: ${item.title}`}
                                        class="w-full h-auto object-contain max-h-[600px]"
                                        style="object-fit: contain;"
                                    />
                                </div>
                            </div>
                        )
                    }
                </div>

                <!-- Tags Section (Full Width Below) -->
                <div class="gsap-detail-section mt-16 opacity-0">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-12 h-0.5 bg-gradient-to-r from-amber-400 to-amber-600"
                        >
                        </div>
                        <h2
                            class="text-xs font-medium tracking-[0.3em] uppercase text-amber-600 dark:text-amber-400"
                        >
                            Tags
                        </h2>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        {
                            item.tags.map((tag: string) => (
                                <span class="flex items-center gap-2 px-4 py-2 bg-slate-100 dark:bg-slate-900 border border-slate-200 dark:border-slate-800 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-full hover:border-amber-500/50 transition-colors">
                                    <Tag class="w-3 h-3 text-amber-500" />
                                    {tag}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- Navigation Section -->
        <section
            class="relative border-t border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-950"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-slate-200 dark:divide-slate-800"
                >
                    <!-- Previous Item -->
                    <div class="py-12 md:pr-12">
                        {
                            prevItem ? (
                                <a
                                    href={`/gallery/${prevItem.slug}`}
                                    class="group block"
                                >
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center gap-2 mb-3">
                                        <ArrowLeft class="w-3 h-3 group-hover:-translate-x-1 transition-transform" />
                                        Moment Sebelumnya
                                    </span>
                                    <div class="flex items-start gap-4">
                                        <img
                                            src={prevItem.image}
                                            alt={prevItem.title}
                                            class="w-20 h-20 object-cover rounded-lg"
                                        />
                                        <div>
                                            <p class="text-xs text-amber-600 dark:text-amber-400 mb-1">
                                                {prevItem.category}
                                            </p>
                                            <h3 class="text-lg font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors line-clamp-2">
                                                {prevItem.title}
                                            </h3>
                                        </div>
                                    </div>
                                </a>
                            ) : (
                                <a href="/#gallery" class="group block">
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center gap-2 mb-3">
                                        <ArrowLeft class="w-3 h-3 group-hover:-translate-x-1 transition-transform" />
                                        Kembali
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        Semua Moment
                                    </h3>
                                </a>
                            )
                        }
                    </div>

                    <!-- Next Item -->
                    <div class="py-12 md:pl-12 text-right">
                        {
                            nextItem ? (
                                <a
                                    href={`/gallery/${nextItem.slug}`}
                                    class="group block"
                                >
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center justify-end gap-2 mb-3">
                                        Moment Selanjutnya
                                        <ArrowRight class="w-3 h-3 group-hover:translate-x-1 transition-transform" />
                                    </span>
                                    <div class="flex items-start gap-4 justify-end">
                                        <div class="text-right">
                                            <p class="text-xs text-amber-600 dark:text-amber-400 mb-1">
                                                {nextItem.category}
                                            </p>
                                            <h3 class="text-lg font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors line-clamp-2">
                                                {nextItem.title}
                                            </h3>
                                        </div>
                                        <img
                                            src={nextItem.image}
                                            alt={nextItem.title}
                                            class="w-20 h-20 object-cover rounded-lg"
                                        />
                                    </div>
                                </a>
                            ) : (
                                <a href="/#gallery" class="group block">
                                    <span class="text-xs font-medium tracking-[0.3em] uppercase text-slate-400 dark:text-slate-500 flex items-center justify-end gap-2 mb-3">
                                        Kembali
                                        <ArrowRight class="w-3 h-3 group-hover:translate-x-1 transition-transform" />
                                    </span>
                                    <h3 class="text-xl font-bold font-serif text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                        Semua Moment
                                    </h3>
                                </a>
                            )
                        }
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Hero entrance animation
        const heroTl = gsap.timeline({ defaults: { ease: "power3.out" } });

        heroTl
            .to(".gsap-detail-hero-img", {
                scale: 1,
                duration: 1.8,
                ease: "power2.out",
            })
            .to(
                ".gsap-detail-back",
                {
                    opacity: 1,
                    x: 0,
                    duration: 0.6,
                },
                "-=1.2",
            )
            .to(
                ".gsap-detail-badge",
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                },
                "-=0.9",
            )
            .to(
                ".gsap-detail-title",
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                },
                "-=0.6",
            )
            .to(
                ".gsap-detail-meta",
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                },
                "-=0.5",
            );

        // Set initial states
        gsap.set(".gsap-detail-back", { x: -20 });
        gsap.set(".gsap-detail-badge", { y: 15 });
        gsap.set(".gsap-detail-title", { y: 30 });
        gsap.set(".gsap-detail-meta", { y: 15 });

        // Content sections on scroll
        const sections = document.querySelectorAll(".gsap-detail-section");
        sections.forEach((section, i) => {
            gsap.set(section, { y: 30 });
            gsap.to(section, {
                scrollTrigger: {
                    trigger: section,
                    start: "top 85%",
                },
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: i * 0.1,
                ease: "power3.out",
            });
        });
    });
</script>

<style>
    /* Grain texture */
    section:first-of-type::after {
        content: "";
        position: absolute;
        inset: 0;
        z-index: 1;
        opacity: 0.03;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        pointer-events: none;
    }
</style>
